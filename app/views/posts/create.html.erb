<div class="container">
<h1>Create a Post</h1>

<%= form_with url:"/posts/create" , method: :get do|form| %>
<div class="mb-3">
<%= form.label :title, class:'form-label' %>
  <%= form.text_field :title, class: 'form-control' , placeholder: "Write a Title"%>

</div>

<div class="mb-3">
 <%= form.label :image_url, class:'form-label' %>
  <%= form.text_field :image_url, class: 'form-control' , placeholder: "Write una image_url"%>

</div>

<div class="mb-3">
  <%= form.label :content, class:'form-label' %>
  <%= form.text_area :content, class: 'form-control' , placeholder: "Write a content"%>

</div>
<button type="submit" class="btn btn-dark">Submit</button>
<%= link_to("back" , root_path) %>
</div>
<% end %>


